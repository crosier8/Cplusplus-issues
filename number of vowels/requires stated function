# include <iostream>
# include <string>

using namespace std;

// function & methods andprototypes
bool isvowel(char); // function to determine if letter is a vowel

int main()
{
	//declarations
	bool vowel;	
	string str;
	int count;
	int size = (str.length());
	

	

	//input
	cout << " Input and sequence of letters and press enter" << endl;
	cin >> str;
	

	//process

	
	bool isvowel(char);
	char l;
	count = 0;
	for (l = 0; l < size; ++l)
	{
		
		if (bool isvowel = true)
		{
			count = count + 1;
		}
		
	}
	

	// output
	// tells the user how many vowels are in a string
	cout << "vowels? " << count << endl;
	cout << endl;

	//end program
	return 0;	
}
	// function & method
/* 
	Function: isvowel(char)
	Precondition: receive one character
	Postcondition: returns true or false
	Purpose: to determine if the character is a vowel
*/
bool isvowel(char l){
	bool isvowel = false;
	switch (l) {
	case 'a': case 'A':
	case 'e': case 'E':
	case 'i': case 'I':
	case 'o': case 'O':
	case 'u': case 'U':
		isvowel = true;
		break;
	default:
		isvowel = false;
		break;
	}
	return isvowel;
}
